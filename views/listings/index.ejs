<% layout("layouts/boilerplate") -%>
  <style>
    #filters {
      display: flex;
      flex-wrap: nowrap;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      padding: 1rem;
      gap: 1rem;
      align-items: center;
    }

    .filter {
      flex: 0 0 auto;
      scroll-snap-align: start;
      text-align: center;
      min-width: 80px;
      opacity: 0.7;
    }

    .filter p {
      font-size: 0.75rem;
      margin: 0.25rem 0 0 0;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }
    .tax-info {
      display: none;
    }

    .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.25rem;
      padding: 1rem;
      margin-left: 1rem;
      display: flex;
      align-items: center;
      flex: 0 0 auto;
    }

    a.filter {
      text-decoration: none;
      color: inherit;
    }

    .wishlist-form {
      position: absolute;
      top: 10px;
      right: 1.5rem;
      z-index: 100;
    }

    .wishlist-btn {
      background: none;
      border: none;
      font-size: 24px;
      cursor: pointer;
      color: gray;
    }

    .wishlist-btn:hover {
      transform: scale(1.2);
    }
  </style>

  <body>

    <div id="filters">
      <a href="/listings?category=Trending" class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </a>
      <a href="/listings?category=Rooms" class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </a>
      <a href="/listings?category=Iconic Cities" class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </a>
      <a href="/listings?category=Mountains" class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </a>
      <a href="/listings?category=Castles" class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </a>
      <a href="/listings?category=Amazing Pools" class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </a>
      <a href="/listings?category=Camping" class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </a>
      <a href="/listings?category=Farms" class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </a>
      <a href="/listings?category=Arctic" class="filter">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </a>
      <a href="/listings?category=Domes" class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </a>
      <a href="/listings?category=Boats" class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </a>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>

      </div>


    </div>
    <% if (typeof query !=='undefined' ) { %>
      <div class="mt-3">
        <h5>Showing results for "<%= query %>"</h5>
        <% if (allListings.length===0) { %>
          <p>No listings found matching your search.</p>
          <% } %>
      </div>
      <% } %>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
          <% for(let listing of allListings){ %>
            <div class="card-wrapper" style="position: relative;">
              <!-- <%if(currUser){%>
              <form action="/wishlist/<%=listing._id%>" method="POST" class="wishlist-form">
                <% if (currUser && currUser.wishlist.includes(listing._id)) { %>
                  <button type="submit" class="wishlist-btn"><i class="fa-solid fa-heart"
                      style="color:red;"></i></button>
                  <% } else { %>
                    <button type="submit" class="wishlist-btn"><i class="fa-regular fa-heart"
                        style="color:gray;"></i></button>
                    <% } %>
              
              </form>
              <%}%> -->
              <%if(!currUser){%>
                <form action="/wishlist/<%=listing._id%>" method="POST" class="wishlist-form">
                  <button type="button" class="wishlist-btn login-redirect">
                    <i class="fa-regular fa-heart" style="color: gray;"></i>
                  </button>

                </form>
                <%}else{%>
                  <form action="/wishlist/<%=listing._id%>" method="POST" class="wishlist-form">
                    <% if (currUser && currUser.wishlist.includes(listing._id)) { %>
                      <button type="submit" class="wishlist-btn"><i class="fa-solid fa-heart"
                          style="color:red;"></i></button>
                      <% } else { %>
                        <button type="submit" class="wishlist-btn"><i class="fa-regular fa-heart"
                            style="color:gray;"></i></button>
                        <% } %>

                  </form>
                  <%}%>
                    <a href="/listings/<%= listing._id  %>" class="listing-link">
                      <div class="card col listing-card" style="position: relative;">
                        <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image"
                          style="height:20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body flex flex-row">
                          <p class="card-text mb-1">
                            <b>
                              <%= listing.title %>
                            </b>
                          </p>
                          <div class="price-tax-line">
                            <span class="listing-price">
                              &#8377;<%= listing.price ? Number(listing.price).toLocaleString("en-IN") : "N/A" %> /
                                night
                            </span>
                            &nbsp;<span class="tax-info">+ 18% GST = &#8377;<%= listing.price ?
                                Number(listing.price*1.18).toLocaleString("en-IN") : "N/A" %> / night</span>
                          </div>
                        </div>
                      </div>
                    </a>
            </div>
            <%}%>
        </div>

  </body>
  <script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (info of taxInfo) {
        if (info.style.display != "inline") {
          info.style.display = "inline";
        } else {
          info.style.display = "none";
        }
      }
    })
    document.addEventListener("DOMContentLoaded", () => {
      document.querySelectorAll('.login-redirect').forEach(button => {
        button.addEventListener('click', () => {
          window.location.href = "/login";
        });
      });
    });

    document.querySelectorAll(".wishlist-btn").forEach((btn) => {
      btn.addEventListener("click", (e) => {
        console.log("❤️ Wishlist clicked");
      });
    });
    document.querySelectorAll('.listing-card').forEach(card => {
      const form = card.querySelector('.wishlist-form');

      card.addEventListener('mouseenter', () => {
        if (form) form.style.display = 'block';
      });

      card.addEventListener('mouseleave', () => {
        if (form) form.style.display = 'none';
      });
    });
    document.addEventListener("DOMContentLoaded", () => {
      document.querySelectorAll('.wishlist-form').forEach(form => {
        form.addEventListener('submit', async (e) => {
          e.preventDefault();       // prevent default form submission
          e.stopPropagation();      // prevent click from bubbling to <a>

          const response = await fetch(form.action, {
            method: "POST",
            headers: { "X-Requested-With": "XMLHttpRequest" }
          });

          if (response.ok) {
            console.log("Wishlist updated successfully");
            const icon = form.querySelector("i");
            if (icon.classList.contains("fa-regular")) {
              // Switch to filled red heart
              icon.classList.remove("fa-regular");
              icon.classList.add("fa-solid");
              icon.style.color = "red";
            } else {
              // Switch to hollow gray heart
              icon.classList.remove("fa-solid");
              icon.classList.add("fa-regular");
              icon.style.color = "gray";
            }
          } else {
            console.error("Wishlist update failed");
          }
        });
      });
    });



  </script>